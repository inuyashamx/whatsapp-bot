# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/whatsapp_bot?schema=public

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Memory TTL in seconds (default: 24 hours)
REDIS_MEMORY_TTL=86400

# =============================================================================
# WHATSAPP (Meta Business API)
# =============================================================================
# Get these from Meta Developer Portal: https://developers.facebook.com/
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-permanent-access-token
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token-for-webhook

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Choose your AI provider: openai or anthropic
AI_PROVIDER=anthropic

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# AI Parameters
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# =============================================================================
# GOOGLE APIS
# =============================================================================
# OAuth 2.0 credentials from Google Cloud Console
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# Service account (optional, for server-to-server)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key\n-----END PRIVATE KEY-----"

# Calendar settings
GOOGLE_CALENDAR_ID=primary

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For Gmail API
EMAIL_FROM_NAME=Interview Bot
EMAIL_FROM_ADDRESS=interviews@yourdomain.com

# =============================================================================
# INTERVIEW BOT CONFIGURATION
# =============================================================================
# Default language for interviews
DEFAULT_LANGUAGE=en

# Maximum conversation history to keep in context
MAX_CONVERSATION_HISTORY=20

# Interview session timeout in minutes
INTERVIEW_SESSION_TIMEOUT=60

# Company information for the bot
COMPANY_NAME=Your Company Name
COMPANY_WEBSITE=https://yourcompany.com
